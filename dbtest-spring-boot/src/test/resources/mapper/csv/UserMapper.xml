<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.fartherp.dbtest.spring.boot.test.autoconfigure.csv.UserMapper">
    <resultMap id="BaseResultMap" type="com.github.fartherp.dbtest.spring.boot.test.autoconfigure.csv.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="Base_Column_List">
    `id`, `user_name`, `password`, `phone`, `create_time`, `update_time`
    </sql>

    <select id="findByUsername" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from `tb_user`
        where `user_name` = #{userName,jdbcType=VARCHAR}
    </select>
</mapper>
